{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "kortex",
  "version": "0.6.0",
  "identifier": "kortex",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "kortex",
        "width": 1080,
        "height": 780,
        "decorations": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "entitlements": "entitlements.plist"
    },
    "externalBin": [],
    "resources": [
      "src/audio/transcription/*",
      "src/audio/mac/record.cjs",
      "src/audio/mac/SystemAudioDump",
      "bin/AudioCapture-x86_64-pc-windows-msvc.exe"
    ]
  }
}